
    <div class="row">
        <div class="col-lg-12">
            @Html.AntiForgeryToken()
            <form data-bind="with: Filter, submit: ApplyFilter">
                <div class="row">
                    <div class="col-md-3 col-sm-6">
                        <div class="form-group">
                            <label for="filter-council-name">Ім'я (Прізвище) особи</label>
                            <input class="form-control" type="text" id="filter-name" name="filter-name" data-bind="value: Name">
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="form-group">
                            <label> Статус запиту</label>
                            <select class="form-control" data-bind="value: StatusId,
                                        options: Requests.CareRequestStatuses,
                                        optionsValue: 'Key' , optionsText: 'Value' , optionsCaption: '-Оберіть статус-'"></select>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="form-group">
                            <label> Розглянуто від</label>
                            <input class="form-control" data-bind="datePicker: StartDate" />
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="form-group">
                            <label> Розглянуто до</label>
                            <input class="form-control" data-bind="datePicker: EndDate" />
                            </div>
                    </div>


                    


                </div>
                <div class="row">
                    <div class="col-xs-12 text-right">
                        <div class="form-group">
                            <button type="button" class="btn btn-default" data-bind="click: $root.ClearFilter">Очистити</button>
                            <button type="submit" class="btn btn-primary" data-bind="click: $root.ApplyFilter">Пошук</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>